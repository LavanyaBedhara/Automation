package stepDefinitions;

import io.cucumber.java.en.*;
import pageObjects.CityPage;

public class CitySteps {
    CityPage cityPage = new CityPage();

    @Given("I am on the City module")
    public void i_am_on_the_city_module() {
        cityPage.navigateToCityModule();
    }

    @When("I add a new city with valid data")
    public void i_add_new_city_with_valid_data() {
        cityPage.clickAddCity();
        cityPage.fillCityForm();
        cityPage.submitCityForm();
    }

    @Then("The city should be created successfully")
    public void the_city_should_be_created_successfully() {
        cityPage.verifyCityCreated();
    }
}
