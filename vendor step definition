package stepDefinitions;

import io.cucumber.java.en.*;
import pageObjects.VendorPage;

public class VendorSteps {
    VendorPage vendorPage = new VendorPage();

    @Given("I am on the Vendor module")
    public void i_am_on_the_vendor_module() {
        vendorPage.navigateToVendorModule();
    }

    @When("I add a new vendor with valid details")
    public void i_add_a_new_vendor_with_valid_details() {
        vendorPage.clickAddVendor();
        vendorPage.fillVendorForm();
        vendorPage.submitVendorForm();
    }

    @Then("The vendor should be created successfully")
    public void the_vendor_should_be_created_successfully() {
        vendorPage.verifyVendorCreated();
    }
}
